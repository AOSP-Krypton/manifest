<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <remote name="github-ssh"
        fetch="ssh://git@github.com/" />

    <remote name="kosp"
        fetch="ssh://git@github.com/AOSP-Krypton/"
        revision="A13" />

    <remote name="gitlab-ssh"
        fetch="ssh://git@gitlab.com/" />

    <remote name="kosp-gitlab"
        fetch="ssh://git@gitlab.com/kosp/"
        revision="A13" />

    <remote name="grapheneos"
        fetch="ssh://git@github.com/GrapheneOS/"
        revision="13" />

    <!-- ART -->
    <remove-project name="platform/art" />
    <project path="art" name="art" remote="kosp" />

    <!-- Build -->
    <remove-project name="platform/build" />
    <project path="build/make" name="build_make" remote="kosp" >
        <copyfile src="core/root.mk" dest="Makefile" />
        <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
        <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
        <linkfile src="core" dest="build/core" />
        <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
        <linkfile src="target" dest="build/target" />
        <linkfile src="tools" dest="build/tools" />
    </project>

    <remove-project name="platform/build/soong" />
    <project path="build/soong" name="build_soong" remote="kosp" >
        <linkfile src="root.bp" dest="Android.bp" />
        <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
    </project>

    <!-- Device -->
    <project path="device/kosp/sepolicy" name="device_kosp_sepolicy" remote="kosp" />
    <project path="device/qcom/sepolicy" name="device_qcom_sepolicy" remote="kosp" />
    <project path="device/qcom/sepolicy_vndr" name="device_qcom_sepolicy_vndr" remote="kosp" />

    <!-- Hardware -->
    <remove-project name="platform/hardware/libhardware" />
    <project path="hardware/libhardware" name="hardware_libhardware" remote="kosp" />

    <project path="hardware/lineage/interfaces" name="hardware_lineage_interfaces" remote="kosp" />

    <!-- System -->
    <remove-project name="platform/system/sepolicy" />
    <project path="system/sepolicy" name="system_sepolicy" remote="kosp" />

    <!-- Vendor -->
    <project path="vendor/kosp" name="vendor_kosp" remote="kosp" />
    <project path="vendor/support" name="vendor_support" remote="kosp" />
    <project path="vendor/themes" name="vendor_themes" remote="kosp" />

</manifest>

